<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Titre"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#A8795185"
        android:backgroundTint="#C9C11EEF"
        android:fadingEdge="horizontal|vertical"
        android:fadingEdgeLength="10dp"
        android:gravity="center"
        android:text="Draw.io"
        android:textColor="#FF5200"
        android:textColorLink="#54FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/top_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/couleurs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tag="couleurs"
            app:chipSpacing="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/couleur5"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:checkable="true"
                android:checked="true"
                android:tag="#FF000000"
                app:chipCornerRadius="30dp"
                app:chipIconEnabled="false"
                app:chipIconVisible="false"
                app:chipMinHeight="60dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStrokeColor="@color/chip"
                app:chipStrokeWidth="12px"
                app:ensureMinTouchTargetSize="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/couleur1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/rouge"
                android:checkable="true"
                android:tag="#FF0000"
                app:chipCornerRadius="30dp"
                app:chipIconEnabled="false"
                app:chipIconVisible="false"
                app:chipMinHeight="60dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStrokeColor="@color/chip"
                app:chipStrokeWidth="12px"
                app:ensureMinTouchTargetSize="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/couleur2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/bleu"
                android:checkable="true"
                android:tag="#0000FF"
                app:chipCornerRadius="30dp"
                app:chipIconEnabled="false"
                app:chipIconVisible="false"
                app:chipMinHeight="60dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStrokeColor="@color/chip"
                app:chipStrokeWidth="12px"
                app:ensureMinTouchTargetSize="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/couleur3"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/vert"
                android:checkable="true"
                android:tag="#008000"
                app:chipCornerRadius="30dp"
                app:chipIconEnabled="false"
                app:chipIconVisible="false"
                app:chipMinHeight="60dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStrokeColor="@color/chip"
                app:chipStrokeWidth="12px"
                app:ensureMinTouchTargetSize="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/couleur4"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/rose"
                android:checkable="true"
                android:tag="#FF00FF"
                app:chipCornerRadius="30dp"
                app:chipIconEnabled="false"
                app:chipIconVisible="false"
                app:chipMinHeight="60dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStrokeColor="@color/chip"
                app:chipStrokeWidth="12px"
                app:ensureMinTouchTargetSize="false" />


            <com.google.android.material.chip.Chip
                android:id="@+id/couleur6"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:checkable="true"
                android:tag="#FFFFFFFF"
                app:chipCornerRadius="30dp"
                app:chipIconEnabled="false"
                app:chipIconVisible="false"
                app:chipMinHeight="60dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStrokeColor="@color/chip"
                app:chipStrokeWidth="12px"
                app:ensureMinTouchTargetSize="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/couleur7"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/cyan"
                android:checkable="true"
                android:tag="#00FFFF"
                app:chipCornerRadius="30dp"
                app:chipIconEnabled="false"
                app:chipIconVisible="false"
                app:chipMinHeight="60dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStrokeColor="@color/chip"
                app:chipStrokeWidth="12px"
                app:ensureMinTouchTargetSize="false"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/couleur8"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/gold"
                android:checkable="true"
                android:tag="#FFD700"
                app:chipCornerRadius="30dp"
                app:chipIconEnabled="false"
                app:chipIconVisible="false"
                app:chipMinHeight="60dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStrokeColor="@color/chip"
                app:chipStrokeWidth="12px"
                app:ensureMinTouchTargetSize="false"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/zone_dessin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/bottom_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#64A7CA"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rectangle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/triangle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/triangle" />

            <ImageView
                android:id="@+id/cercle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/cercle" />

            <ImageView
                android:id="@+id/crayon"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/crayon" />

            <ImageView
                android:id="@+id/efface"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/efface" />

            <ImageView
                android:id="@+id/undo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/undo" />

            <ImageView
                android:id="@+id/redo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/redo" />

            <ImageView
                android:id="@+id/taille_trait"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/largeur_trait" />

            <ImageView
                android:id="@+id/sceau"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/remplir" />

            <ImageView
                android:id="@+id/save"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/enregistrer" />

            <ImageView
                android:id="@+id/palette"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/palette" />

            <ImageView
                android:id="@+id/pipette"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/pipette" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>